# Copy this file to .env and fill in the values. Never commit your real .env.
# Zoho OAuth credentials (required). Obtain via zoho_oauth_helper.py
ZOHO_CLIENT_ID="your_client_id"  # pragma: allowlist secret
ZOHO_CLIENT_SECRET="your_client_secret"  # pragma: allowlist secret
ZOHO_REFRESH_TOKEN="your_refresh_token"  # pragma: allowlist secret

# Zoho Accounts base URL (region-specific). Examples:
#  - https://accounts.zoho.com        (US)
#  - https://accounts.zoho.eu         (EU)
#  - https://accounts.zoho.in         (IN)
#  - https://accounts.zoho.com.cn     (CN)
ZOHO_ACCOUNTS_BASE="https://accounts.zoho.com"

# Agent runtime flags
# Use live Zoho APIs (WorkDrive/Projects). If false, runs with mock data.
# Accepts: true/false/1/0/yes/no
NEXUS_USE_LIVE_APIS="false"

# Retry/backoff settings for network calls (agent loop resilience)
# Max attempts (including first try). Range 1-10. Default 3.
NEXUS_RETRY_ATTEMPTS="3"
# Base delay in milliseconds for exponential backoff. Default 500ms.
NEXUS_RETRY_BASE_DELAY_MS="500"

# WorkDrive configuration (required when NEXUS_USE_LIVE_APIS=true)
# Target folder ID to list files from.
WORKDRIVE_FOLDER_ID=""

# Optional: list projects for visibility/debugging using Zoho Projects
# Requires ZOHO_PORTAL_ID when enabled.
NEXUS_LIST_PROJECTS="false"
ZOHO_PORTAL_ID=""  # e.g., your-portal-id or subdomain

# Optional: create a Zoho Projects task for each document with issues
# Requires ZOHO_PORTAL_ID and ZOHO_PROJECT_ID when enabled.
NEXUS_CREATE_TASKS="false"
ZOHO_PROJECT_ID=""  # target project ID to file tasks under
